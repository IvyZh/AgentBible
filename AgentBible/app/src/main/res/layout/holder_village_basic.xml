<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_around_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Button
            style="@style/card_title_tv"
            android:background="@drawable/selector_common"
            android:text="基本信息" />

        <ImageView style="@style/card_arrow" />
    </RelativeLayout>


    <View style="@style/divide_style" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/home_menu_rl"
            android:layout_marginLeft="@dimen/margin_lr"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="小区地址:" />

                <TextView
                    android:id="@+id/tv_unit_price"
                    style="@style/home_menu_tv"
                    android:text="此模块还需要调整" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="物业费:  " />

                <TextView
                    android:id="@+id/tv_house_fitment"
                    style="@style/home_menu_tv"
                    android:text="精装修" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="容积率:  " />

                <TextView
                    android:id="@+id/tv_plot_ratio"
                    style="@style/home_menu_tv"
                    android:text="--" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="楼栋数:  " />

                <TextView
                    android:id="@+id/tv_house_num"
                    style="@style/home_menu_tv"
                    android:text="35" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="@style/house_detail_tv"
                    android:text="建筑年代:  " />

                <TextView
                    android:id="@+id/tv_house_old"
                    style="@style/home_menu_tv"
                    android:text="1990" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/home_menu_rl"
            android:gravity="left|center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView style="@style/house_detail_tv" />

                <TextView
                    android:id="@+id/tv_house_floor"
                    style="@style/home_menu_tv" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView style="@style/house_detail_tv" />

                <TextView

                    style="@style/home_menu_tv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="绿化率:" />

                <TextView
                    android:id="@+id/tv_green_rate"
                    style="@style/home_menu_tv"
                    android:text="--" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="建筑类别:  " />

                <TextView
                    android:id="@+id/tv_house_orientation"
                    style="@style/home_menu_tv"
                    android:text="--" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    style="@style/house_detail_tv"
                    android:text="建筑结构:  " />

                <TextView
                    android:id="@+id/tv_house_location"
                    style="@style/home_menu_tv"
                    android:text="--" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>