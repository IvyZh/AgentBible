<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_publish_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="发布日期：2016-05-06" />

    <View style="@style/divide_style" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/home_menu_rl">

            <TextView
                style="@style/home_menu_tv"
                android:text="售价" />

            <TextView
                android:id="@+id/tv_house_price"
                style="@style/second_house_detail"
                android:text="180万" />
        </LinearLayout>

        <LinearLayout
            style="@style/home_menu_rl"
            android:layout_weight="2">

            <TextView
                style="@style/home_menu_tv"
                android:text="房型" />

            <TextView
                android:id="@+id/tv_house_layout"
                style="@style/second_house_detail"
                android:text="2室1厅1卫" />
        </LinearLayout>

        <LinearLayout style="@style/home_menu_rl">

            <TextView
                style="@style/home_menu_tv"
                android:text="面积" />

            <TextView
                android:id="@+id/tv_house_area"
                style="@style/second_house_detail"
                android:text="53.12㎡" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/divide_style" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/home_menu_rl"
            android:layout_marginLeft="@dimen/margin_lr"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/tv_unit_price"
                style="@style/home_menu_tv"
                android:text="单价:123454" />

            <TextView
                android:id="@+id/tv_house_fitment"
                style="@style/home_menu_tv"
                android:text="装修:精装修" />

            <TextView
                android:id="@+id/tv_house_old"
                style="@style/home_menu_tv"
                android:text="年代:1990" />
        </LinearLayout>

        <LinearLayout
            style="@style/home_menu_rl"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/tv_house_floor"
                style="@style/home_menu_tv"
                android:text="楼层:共12层" />

            <TextView
                android:id="@+id/tv_house_orientation"
                style="@style/home_menu_tv"
                android:text="朝向:南" />

            <TextView
                android:id="@+id/tv_house_location"
                style="@style/home_menu_tv"
                android:text="区域:徐汇田林" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/divide_style" />


    <RelativeLayout
        android:id="@+id/rl_garden_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/tv_garden_name_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_grey_70"
            android:text="小区:" />

        <TextView
            android:id="@+id/tv_garden_name"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_garden_name_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="#222222"
            android:text="湖滨半岛公馆" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right"
            android:layout_marginRight="@dimen/margin_lr" />

    </RelativeLayout>


</LinearLayout>