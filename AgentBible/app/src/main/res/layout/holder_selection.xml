<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_first"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_location"
                style="@style/tv_select_style"
                android:text="区域" />

            <ImageView
                android:id="@+id/iv_location_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

        <View style="@style/weight_view" />

        <LinearLayout
            android:id="@+id/ll_second"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_price"
                style="@style/tv_select_style"
                android:text="价格" />

            <ImageView
                android:id="@+id/iv_price_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

        <View style="@style/weight_view" />

        <LinearLayout
            android:id="@+id/ll_third"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_source"
                style="@style/tv_select_style"
                android:text="来源" />

            <ImageView
                android:id="@+id/iv_source_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_last"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_more"
                style="@style/tv_select_style"
                android:text="更多" />

            <ImageView
                android:id="@+id/iv_more_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/divide_style" />
</LinearLayout>