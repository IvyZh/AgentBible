<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/common_blue">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_lr"
        android:paddingRight="@dimen/margin_lr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_toRightOf="@id/iv_back"
        android:layout_marginRight="@dimen/margin_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_head_search_bg">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_lr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_search_small" />

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#99ffffff"
            android:layout_centerVertical="true"
            android:text="请输入小区名称" />
    </RelativeLayout>

</RelativeLayout>